{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "productName",
    "version": "1.0.0",
    "identifier": "app.identifier",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": false,
        "windows": [
            {
                "title": "appsTitle",
                "width": 1080,
                "height": 720,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi",
            "nsis",
            "dmg",
            "app",
            "deb",
            "appimage"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/64x64.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
